.menu {
    display flex
    flex-direction row
    justify-content space-between
    padding 20px 0
    border-bottom: 1px solid #828282;

    &__link {
        font-size 18px
        line-height 22px
        padding 10px
        font-weight bold
        color #828282
        transition color 0.2s ease-in-out
        cursor pointer

        &:first-child {
            padding-left 0
        }

        &:last-child {
            padding-right 0
        }

        &:hover, &:active {
            color #070707
        }
    }
}
