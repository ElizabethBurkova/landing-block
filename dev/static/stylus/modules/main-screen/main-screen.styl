.main-screen
    &__info
        display flex
        justify-content space-between
        padding 40px 0 30px
        align-items center

    &__title
        font-size 48px
        line-height 59px
        font-weight bold

    &__description
        font-size 18px
        line-height 22px
        font-weight 500

    &__bg
        max-width 100%

.lang-switcher
    font-size 16px
    line-height 20px
    font-weight bold
    transform rotate(-90 deg) translate(50%, 0)
    transform-origin 100% 100%

    span
        padding 0 3px

    &__link
        color: #828282

        &--active
          color: #070707

